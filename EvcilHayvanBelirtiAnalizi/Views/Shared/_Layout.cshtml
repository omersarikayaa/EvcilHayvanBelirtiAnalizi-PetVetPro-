<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>PetVetPro - Profesyonel Hayvan Sağlık Analizi</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        /* 1. FOOTER'I EN ALTA SABİTLEME (STRECH) SİHRİ */
        html, body {
            height: 100%;
            margin: 0;
        }

        body {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
            font-family: 'Segoe UI', Arial, sans-serif;
            background-color: #ffffff;
        }

        main {
            flex: 1 0 auto; /* İçerik az olsa da tüm boşluğu doldurur ve footer'ı aşağı iter */
        }

        .pet-footer {
            flex-shrink: 0;
            background-color: #00234b;
            color: white;
            padding: 50px 0 20px 0;
            margin-top: 50px;
        }

        /* 2. MENÜ VE BUTON STİLLERİ */
        .nav-link-custom, .nav-link {
            font-family: 'Segoe UI', Tahoma, sans-serif !important;
            color: #333 !important;
            font-weight: 700 !important;
            font-size: 1.05rem !important;
            transition: 0.3s;
            text-decoration: none;
            margin: 0 10px;
        }

            .nav-link:hover {
                color: #ba2d81 !important;
            }

        /* Admin Özel Linki */
        .nav-admin {
            color: #dc3545 !important;
            border: 1px solid #dc3545;
            border-radius: 20px;
            padding: 5px 15px !important;
        }

            .nav-admin:hover {
                background: #dc3545;
                color: white !important;
            }

        .btn-main {
            background-color: #ba2d81;
            color: white !important;
            border-radius: 35px;
            padding: 8px 25px;
            font-weight: bold;
            border: none;
            transition: 0.3s;
        }

        .btn-outline-main {
            border: 2px solid #ba2d81;
            color: #ba2d81 !important;
            border-radius: 35px;
            padding: 8px 25px;
            font-weight: bold;
            transition: 0.3s;
        }

        .top-mini-bar {
            background-color: #00234b;
            padding: 5px 0;
            color: white;
            font-size: 12px;
        }

        .main-header {
            padding: 15px 0;
            border-bottom: 1px solid #eee;
            background: #fff;
            position: sticky;
            top: 0;
            z-index: 1000;
        }

        .logo-text {
            font-size: 24px;
            font-weight: bold;
            color: #00234b;
            text-decoration: none;
        }

            .logo-text span {
                color: #ba2d81;
            }

        @@media print {
            .no-print {
                display: none !important;
            }
        }
    </style>
</head>
<body>
    <div class="top-mini-bar no-print">
        <div class="container d-flex justify-content-between align-items-center">
            <span>🐾 PetVetPro Profesyonel Destek Ekibi</span>
            <div class="d-none d-md-block">
                @if (User.Identity.IsAuthenticated)
                {
                    <span class="text-white mr-3">Hoş geldin, <b>@User.Identity.Name</b></span>
                }
                <a href="#" class="text-white-50 mx-2 small">Pet Haberleri</a>
            </div>
        </div>
    </div>

    <header class="main-header shadow-sm no-print">
        <div class="container d-flex justify-content-between align-items-center">
            <a href="/" class="logo-text">
                <img src="/images/pets (2).png" width="45" class="mr-2" alt="Logo">
                PetVet<span>Pro</span>
            </a>

            <nav class="d-none d-lg-flex align-items-center">
                <a href="/" class="nav-link-custom">Semptom Analizi</a>
                <a class="nav-link" href="/Home/Bloglar">Bloglar</a>

                @* VETERİNER MÜHÜRÜ *@
                @if (User.IsInRole("Veteriner"))
                {
                    <a class="nav-link" href="/Home/YaziEkle" style="color: #ba2d81 !important;">
                        <i class="fas fa-pen-nib mr-1"></i> Yazı Paylaş
                    </a>
                }

                @* ADMİN MÜHÜRÜ *@
                @if (User.IsInRole("Admin"))
                {
                    <a class="nav-link nav-admin ml-2" href="/Admin/OnayBekleyenler">
                        <i class="fas fa-user-shield mr-1"></i> ADMİN PANELİ
                    </a>
                }
            </nav>

            <div class="auth-buttons d-flex align-items-center">
                @if (!User.Identity.IsAuthenticated)
                {
                    <a class="nav-link text-uppercase" href="/Account/Login">Giriş Yap</a>
                    <a href="/Account/Register" class="btn-main ml-2 text-uppercase">Kayıt Ol</a>
                }
                else
                {
                    <a href="/Account/Logout" class="btn-outline-main text-uppercase">Çıkış Yap</a>
                }
            </div>
        </div>
    </header>

    <main role="main">
        @RenderBody()
    </main>

    <footer class="pet-footer no-print">
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <h4 class="font-weight-bold">PetVetPro 🐾</h4>
                    <p class="small" style="opacity: 0.7;">Gerçek veteriner verileriyle evcil dostlarınızın yanındayız.</p>
                </div>
                <div class="col-md-4">
                    <h6 class="font-weight-bold mb-3">Hızlı Erişim</h6>
                    <ul class="list-unstyled">
                        <li><a href="/" class="text-white-50 small">Semptom Analizi</a></li>
                        <li><a href="/Home/Bloglar" class="text-white-50 small">Sağlık Blogları</a></li>
                        @if (User.IsInRole("Admin"))
                        {
                            <li><a href="/Admin/OnayBekleyenler" class="text-white-50 small text-danger">Admin Onay Paneli</a></li>
                        }
                    </ul>
                </div>
                <div class="col-md-4 text-md-right">
                    <h6 class="font-weight-bold mb-3">Bizi Takip Edin</h6>
                    <a href="#" class="text-white mx-2"><i class="fab fa-facebook fa-lg"></i></a>
                    <a href="#" class="text-white mx-2"><i class="fab fa-instagram fa-lg"></i></a>
                </div>
            </div>
            <hr style="border-top: 1px solid rgba(255,255,255,0.1); margin-top: 40px;">
            <div class="text-center small" style="opacity: 0.5;">© 2025 PetVetPro - Tüm Hakları Saklıdır.</div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>